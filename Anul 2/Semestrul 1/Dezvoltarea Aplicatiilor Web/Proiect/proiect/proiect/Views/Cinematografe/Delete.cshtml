<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="IdCinema" />
    <div class="form-group">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</form>
