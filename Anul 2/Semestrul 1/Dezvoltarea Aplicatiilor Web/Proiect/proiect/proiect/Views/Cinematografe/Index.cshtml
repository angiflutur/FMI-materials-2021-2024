@foreach (var cin in Model)
{
    <div>
        <h4>Cinema</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Nume Cinema:
            </dt>
            <dd class="col-sm-10">
                @cin.NumeCinema
            </dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">
                Descriere:
            </dt>
            <dd class="col-sm-10">
                @cin.Descriere
            </dd>
        </dl>
        <div class="btn-group">
            <a class="btn btn-outline-primary" href="@Url.Action("Edit", new { id = cin.IdCinema })"><i class="bi bi-pencil-square"></i> Edit</a>
            <a class="btn btn-outline-info" href="@Url.Action("Details", new { id = cin.IdCinema })"><i class="bi bi-eye"></i> Detalii</a>
            <a class="btn btn-danger text-white" href="@Url.Action("Delete", new { id = cin.IdCinema })"><i class="bi bi-trash"></i> Sterge</a>
        </div>
    </div>
}
