@model proiect.Models.Producator

@{
    ViewData["Title"] = "Delete";
}

<h2>@ViewData["Title"]</h2>

<h3>Are you sure you want to delete this producer?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            Nume Producator:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumeProducator)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            Imagine:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Imagine)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            Bio:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Bio)
        </dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="IdProducator" />
    <div class="form-group">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
